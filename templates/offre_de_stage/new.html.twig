{% extends 'dashboard/layout.html.twig' %}

{% block title %}Nouvelle offre de stage{% endblock %}

{% block dashboard_content %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Créer une nouvelle offre</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.titreOffre) }}
                            {{ form_row(form.entreprise) }}
                            {{ form_row(form.dureeStage) }}
                            {{ form_row(form.dateDebutStage) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.statutOffre) }}
                            {{ form_row(form.description) }}
                            {{ form_row(form.competencesRequises) }}
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <a href="{{ path('app_offres_stage') }}" class="btn btn-secondary me-2">Retour à la liste</a>
                        <button type="submit" class="btn btn-primary">Créer l'offre</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 