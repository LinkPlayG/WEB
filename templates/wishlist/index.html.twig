{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Heart checkbox functionality
        const checkboxes = document.querySelectorAll('.heart-checkbox input');
        
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const heartIcon = this.nextElementSibling.querySelector('i');
                
                if (this.checked) {
                    heartIcon.classList.remove('unchecked');
                } else {
                    heartIcon.classList.add('unchecked');
                }
            });
        });
    });
</script>
