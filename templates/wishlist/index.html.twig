{# templates/wishlist/index.html.twig #}
    {% extends 'base.html.twig' %}

    {% block title %}Ma Wishlist - Interned{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/wishlist.css') }}">
{% endblock %}

{% block body %}
    <div class="wishlist-container">
        <div class="wishlist-header">
            <h1>Ma Wishlist</h1>
            <p>Retrouvez ici toutes vos offres de stage favorites</p>
        </div>

        {% if wishlist|length > 0 %}
            <div class="wishlist-grid">
                {% for offer in wishlist %}
                    <div class="wishlist-card" data-offer-id="{{ offer.id }}">
                        <div class="card-header">
                            <h3>{{ offer.title }}</h3>
                            <span class="company-name">{{ offer.company.name }}</span>
                        </div>
                        <div class="card-body">
                            <p class="description">{{ offer.description|slice(0, 150) }}...</p>
                            <div class="tags">
                                {% for skill in offer.skills %}
                                    <span class="tag">{{ skill }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn-view" data-offer-id="{{ offer.id }}">
                                <i class="fas fa-eye"></i> Voir les détails
                            </button>
                            <button class="btn-remove" data-offer-id="{{ offer.id }}">
                                <i class="fas fa-heart-broken"></i>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-wishlist">
                <i class="fas fa-heart-broken"></i>
                <h2>Votre wishlist est vide</h2>
                <p>Commencez à ajouter des offres de stage à votre wishlist</p>
                <a href="{{ path('app_offers') }}" class="btn-primary">Voir les offres</a>
            </div>
        {% endif %}
    </div>

    <!-- Modal pour afficher les détails de l'offre -->
    <div id="offerModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="modalContent"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/wishlist.js') }}"></script>
{% endblock %}
