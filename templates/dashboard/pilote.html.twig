{% extends 'dashboard/layout.html.twig' %}

{% block dashboard_content %}
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <h5>Mes Étudiants</h5>
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">{{ stats.etudiants }}</h2>
                    <i class="fas fa-user-graduate fa-2x text-primary"></i>
                </div>
                <div class="mt-2 text-muted">Total des étudiants</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h5>Offres actives</h5>
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">{{ stats.offres }}</h2>
                    <i class="fas fa-briefcase fa-2x text-success"></i>
                </div>
                <div class="mt-2 text-muted">Total des offres</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h5>Entreprises partenaires</h5>
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">{{ stats.entreprises }}</h2>
                    <i class="fas fa-building fa-2x text-info"></i>
                </div>
                <div class="mt-2 text-muted">Total des entreprises</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h5>Étudiants en stage</h5>
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">{{ stats.etudiantsEnStage|length }}</h2>
                    <i class="fas fa-user-check fa-2x text-warning"></i>
                </div>
                <div class="mt-2 text-muted">{{ (stats.etudiantsEnStage|length / stats.etudiants * 100)|round }}% placés</div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="stats-card">
                <h5>Statut des étudiants</h5>
                <canvas id="studentStatusChart"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="stats-card">
                <h5>Candidatures par entreprise</h5>
                <canvas id="applicationChart"></canvas>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Calcul des statistiques pour le graphique
        const enStage = {{ stats.etudiantsEnStage|length }};
        const enRecherche = {{ stats.etudiants - stats.etudiantsEnStage|length }};

        // Graphique du statut des étudiants
        new Chart(document.getElementById('studentStatusChart'), {
            type: 'doughnut',
            data: {
                labels: ['En stage', 'En recherche'],
                datasets: [{
                    data: [enStage, enRecherche],
                    backgroundColor: ['#1cc88a', '#f6c23e']
                }]
            }
        });

        // Graphique des candidatures
        new Chart(document.getElementById('applicationChart'), {
            type: 'bar',
            data: {
                labels: ['Total des entreprises'],
                datasets: [{
                    label: 'Nombre d\'entreprises',
                    data: [{{ stats.entreprises }}],
                    backgroundColor: '#4e73df'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Initialisation des DataTables
        $(document).ready(function() {
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/fr-FR.json'
                }
            });
        });
    </script>
{% endblock %} 