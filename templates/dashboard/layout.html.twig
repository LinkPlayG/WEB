{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/layout.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar">
            {% block sidebar %}
                <div class="section-title">Administration</div>
                <nav class="nav flex-column">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('app_dashboard') }}">
                            <i class="fas fa-home me-2"></i> Accueil
                        </a>
                        <a class="nav-link" href="{{ path('app_users') }}">
                            <i class="fas fa-users-cog me-2"></i> Gestion des utilisateurs
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-building me-2"></i> Gestion des entreprises
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-users me-2"></i> Gestion des promotions
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-briefcase me-2"></i> Gestion des offres
                        </a>
                    {% endif %}
                </nav>

                <div class="section-title">Compte</div>
                <nav class="nav flex-column">
                    <a class="nav-link" href="#">
                        <i class="fas fa-user me-2"></i> Informations Personnelles
                    </a>
                    <a class="nav-link" href="#">
                        <i class="fas fa-shield-alt me-2"></i> Confidentialité et sécurité
                    </a>
                </nav>
            {% endblock %}
        </div>

        <!-- Main Content -->
        <div class="col-md-10 main-content">
            {% block dashboard_content %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
{% endblock %} 