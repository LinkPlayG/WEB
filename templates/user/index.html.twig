{% extends 'dashboard/layout.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/user-management.css') }}">
{% endblock %}

{% block dashboard_content %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Liste des utilisateurs</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-users me-1"></i>
                Utilisateurs
            </div>
            <div class="card-body">
                <table id="usersTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Type</th>
                            <th>Rôles</th>
                            <th>Date de création</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <span class="badge bg-danger">Administrateur</span>
                                    {% elseif 'ROLE_PILOTE' in user.roles %}
                                        <span class="badge bg-primary">Pilote</span>
                                    {% elseif 'ROLE_ETUDIANT' in user.roles %}
                                        <span class="badge bg-success">Étudiant</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Utilisateur</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% for role in user.roles %}
                                        <span class="badge bg-info">{{ role }}</span>
                                    {% endfor %}
                                </td>
                                <td>{{ user.dateCreation|date('d/m/Y H:i') }}</td>
                                <td>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                }
            });
        });
    </script>
{% endblock %} 