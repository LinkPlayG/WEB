{# templates/candidature/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Candidatures - Interned{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/candidature.css') }}">
{% endblock %}

{% block body %}
    <div class="candidature-container">
        <div class="candidature-header">
            <h1>Mes Candidatures</h1>
            <p>Suivez l'état de vos candidatures aux offres de stage</p>
        </div>

        {% if candidatures|length > 0 %}
            <div class="candidature-grid">
                {% for candidature in candidatures %}
                    <div class="candidature-card" data-candidature-id="{{ candidature.id }}">
                        <div class="card-header">
                            <h3>{{ candidature.offer.title }}</h3>
                            <span class="company-name">{{ candidature.offer.company.name }}</span>
                        </div>
                        <div class="card-body">
                            <p class="description">{{ candidature.offer.description|slice(0, 150) }}...</p>
                            <div class="tags">
                                {% for skill in candidature.offer.skills %}
                                    <span class="tag">{{ skill }}</span>
                                {% endfor %}
                            </div>
                            <div class="status-badge {{ candidature.status|lower }}">
                                {{ candidature.status }}
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn-view" data-candidature-id="{{ candidature.id }}">
                                <i class="fas fa-eye"></i> Voir les détails
                            </button>
                            <button class="btn-remove" data-candidature-id="{{ candidature.id }}">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-candidature">
                <i class="fas fa-file-alt"></i>
                <h2>Aucune candidature</h2>
                <p>Vous n'avez pas encore postulé à des offres de stage</p>
                <a href="{{ path('app_offers') }}" class="btn-primary">Voir les offres</a>
            </div>
        {% endif %}
    </div>

    <!-- Modal pour afficher les détails de la candidature -->
    <div id="candidatureModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="modalContent"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/candidature.js') }}"></script>
{% endblock %}
